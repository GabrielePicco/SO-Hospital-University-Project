#include <stdio.h>
#include <unistd.h>
#include <sys/wait.h>

/**
 * Genera ogni x secondi un nuovo paziente (processo), dove x Ã¨
 * un tempo casuale.
 */
int main(int argc,char** argv){
	int waitTime = 2;
	pid_t pidGenerator;

	pidGenerator = getpid();
	while(pidGenerator == getpid()){
		fork();
		if(pidGenerator == getpid()){
			sleep(waitTime);
		}else{
			printf("Sono il paziente X !");
		}
	}
	return 0;
}
